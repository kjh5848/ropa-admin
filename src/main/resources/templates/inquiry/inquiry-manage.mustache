<!-- 메인 화면 -->
<div class="content">
    <h2>문의 목록</h2>
    <div class="card">
        <div class="card-body">
            <!-- 검색 폼 -->
            <form action="/api/inquiry-manage" method="get" class="form-inline search-form float-right mb-3">
                <div class="form-group mr-2">
                    <select class="form-control" name="searchBy">
                        <option value="username">이름</option>
                        <option value="title">제목</option>
                    </select>
                </div>
                <div class="form-group mr-2">
                    <input type="text" class="form-control" placeholder="검색명" name="keyword">
                </div>
                <button type="submit" class="btn btn-primary">검색</button>
            </form>
            <table class="table">
                <colgroup>
                    <col style="width: 10%;"> <!-- 문의 번호 -->
                    <col style="width: 10%;"> <!-- 이름 -->
                    <col style="width: 30%;"> <!-- 제목 -->
                    <col style="width: 15%;"> <!-- 문의일자 -->
                    <col style="width: 10%;"> <!-- 답변 상태 -->
                    <col style="width: 10%;"> <!-- 답변일자 -->
                    <col style="width: 15%;"> <!-- 답변하기 -->
                </colgroup>
                <thead>
                <tr>
                    <th>게시글 번호</th>
                    <th>이름</th>
                    <th>제목</th>
                    <th>문의일자</th>
                    <th>답변 상태</th>
                    <th>답변일자</th>
                    <th>답변하기</th>
                </tr>
                </thead>
                <tbody>
                {{#inquiryList}}
                    <tr>
                        <td>{{num}}</td>
                        <td>{{myName}}</td>
                        <td>{{title}}</td>
                        <td>{{createdAt}}</td>
                        {{#status}}
                            <td>
                                <span class="btn btn-outline-secondary no-wrap-button" disabled>{{statusMsg}}</span>
                            </td>
                            <td>
                                {{commentedAt}}
                            </td>
                        {{/status}}
                        {{^status}}
                            <td>
                                <span class="btn btn-outline-primary no-wrap-button" disabled>{{statusMsg}}</span>
                            </td>
                            <td>
                                {{commentedAt}}
                            </td>
                        {{/status}}
                        <td><a href="/api/inquiry-reply/{{id}}">내용보기</a></td>
                    </tr>
                {{/inquiryList}}
                </tbody>
            </table>

