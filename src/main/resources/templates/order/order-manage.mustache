<!-- 메인 화면 -->
<div class="content">
    <h2>주문 목록</h2>
    <div class="card">
        <div class="card-body">
            <!-- 검색 폼 -->
            <form action="/api/order-manage" method="get" class="form-inline search-form float-right mb-3">
                <div class="form-group mr-2">
                    <select class="form-control" name="searchBy">
                        <option value="username">고객명</option>
                        <option value="mobile">연락처</option>
                        <option value="itemId">아이템코드</option>
                        <option value="itemName">아이템명</option>
                    </select>
                </div>
                <div class="form-group mr-2">
                    <input type="text" class="form-control" placeholder="검색명" name="keyword">
                </div>
                <button type="submit" class="btn btn-primary">검색</button>
            </form>

            <table class="table">
                <thead>
                <tr>
                    <th>고객명</th>
                    <th>연락처</th>
                    <th>아이템코드</th>
                    <th>아이템명</th>
                    <th>개당 가격</th>
                    <th>구매 수량</th>
                    <th>총 구매 금액</th>
                    <th>구매 일자</th>
                    <!--                    <th></th>-->
                </tr>
                </thead>
                <tbody>
                {{#orderHistoryList}}
                    <tr>
                        <td>{{userName}}</td>
                        <td>{{userPhone}}</td>
                        <td>{{itemId}}</td>
                        <td>{{itemName}}</td>
                        <td>{{price}}</td>
                        <td>{{count}}</td>
                        <td>{{totalPrice}}</td>
                        <td>{{orderDate}}</td>
                        <!--                        <td><a href="/api/order-history" class="btn btn-outline-primary btn-sm">상세보기</a></td>-->
                    </tr>
                {{/orderHistoryList}}
                </tbody>
            </table>

