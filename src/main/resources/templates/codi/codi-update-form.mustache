{{> _components/header}}
{{> _components/navbar}}
{{> _components/sidebar-brand}}

<!-- 메인 화면 -->
<div class="content">
    <h2>코디 수정</h2>
    <div class="card">
        <div class="card-body">
            <div class="justify-content-center">
                <!-- 이미지 / 시작  -->
                <div class="d-flex justify-content-center my-5">
                    <div class="card" STYLE="width: 350PX">
                        <img class="card-img-top" id="imgPreview" src="/images/cloth.png">
                        <div class="input-group">
                            <input type="text" class="form-control" name="imgFilename" value=""
                                   onchange="previewImage(this)">
                        </div>
                    </div>
                </div>
                <!--이미지 / 종료-->

                <div class="card-body d-flex justify-content-center">
                    <div class="row">
                        <!-- 코디 등록 input -->
                        <div class="col">
                            <div class="input-group" style="width: 500px;">
                                        <span class="input-group-text"
                                              style="display: inline-block; vertical-align: middle; line-height: normal;"
                                              id="basic-addon1">코디명</span>
                                <input type="text" class="form-control" placeholder="완준룩" aria-label="Username"
                                       aria-describedby="basic-addon1">
                            </div>
                            <form action="/api/codi-register" method="post" enctype="application/x-www-form-urlencoded">
                                <div class="input-group">
                                    <span class="input-group-text"
                                          style="display: inline-block; vertical-align: middle; line-height: normal;">상의</span>
                                    <input type="text" class="form-control" placeholder="컴패스 스몰로고 맨투맨"
                                           aria-label="Username" aria-describedby="basic-addon1" name="top"
                                           id="topInput" value="상의 분류 - 아이템 id">
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"
                                          style="display: inline-block; vertical-align: middle; line-height: normal;"
                                          id="basic-addon1">하의</span>
                                    <input type="text" class="form-control" placeholder="바지" id="pantsInput"
                                           aria-label="Username" aria-describedby="basic-addon1" name="bottom"
                                           value="하의 분류 - 아이템 id">
                                </div>
                                <!-- 확인 버튼 -->
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary mb-3">확인</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div>
                    <!--카테고리 버튼-->
                    <select id="mainCategory" class="btn btn-primary float-left mb-3 mr-2">대분류
                        <option value="1">상의</option>
                        <option value="2">하의</option>
                    </select>
                    <select id="subCategory" class="btn btn-primary float-left mb-3 mr-2">소분류
                        <option value="3">맨투맨</option>
                        <option value="4">반팔</option>
                        <option value="5">셔츠</option>
                        <option value="6">청바지</option>
                        <option value="7">반바지</option>
                    </select>
                    <button id="findButton" class="btn btn-primary float-left mb-3 mr-2">찾기</button>

                    <!--상품 목록-->
                    <div class="clearfix">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>체크</th>
                                <th>상품 주문번호</th>
                                <th>상품명</th>
                                <th>상품 금액</th>
                                <th>재고 수량</th>
                            </tr>
                            </thead>
                            <tbody id="items">
                            <!--여기 내부에 비동기 데이터 뿌려짐-->
                            </tbody>
                        </table>
                    </div>
                    <!-- 저장 -->
                    <div class="d-flex justify-content-center">
                        <button id="item-submit" class="btn btn-primary">등록하기</button>
                    </div>
                </div>
            </div>
        </div>
        <!--코디 등록 ajax 로직-->
{{> _components/codi-register-tool}}
{{> _components/footer}}